title('Dry Types', 'FontSize', 14);


 subtightplot(3,2,4)
 Mapper(corr_H2, lats, lons, 'mask', 'none', 'colors', 'redblue(10)', 'centerT', 'zero', 'contINT', 0.15, 'title','Humid Types', 'subplot',[-1 1],'colorbar1',0);
 title('Humid Types', 'FontSize', 14);


